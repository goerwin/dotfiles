[
  {
    "keys": ["C"],
    "if": { "isKeyDown": true, "rightClickMode": true },
    "send": [null, null]
  },
  {
    "keys": ["C"],
    "if": { "isKeyDown": true, "leftClickMode": true },
    "send": [null, null]
  },
  {
    "keys": ["C"],
    "if": { "Win": true, "Caps": true },
    "set": { "rightClickMode": true },
    "setOnKeyUp": { "rightClickMode": false },
    "send": ["RightClick:down", "RightClick:up"]
  },
  {
    "keys": ["C"],
    "if": { "Win": true },
    "set": { "leftClickMode": true },
    "setOnKeyUp": { "leftClickMode": false },
    "send": ["LeftClick:down", "LeftClick:up"]
  },
  {
    "keys": ["Win"],
    "if": { "isKeyDown": false, "leftClickMode": true },
    "setOnKeyUp": { "leftClickMode": false },
    "send": [null, "LeftClick:up"]
  },
  {
    "keys": ["Win"],
    "if": { "isKeyDown": false, "rightClickMode": true },
    "setOnKeyUp": { "rightClickMode": false },
    "send": [null, "RightClick:up"]
  },
  { "keys": ["Win"], "send": [null, null] }
]
