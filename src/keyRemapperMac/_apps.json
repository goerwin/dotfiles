[
  // Google Chrome
  {
    "keys": ["F3"],
    "if": { "appName": "com.google.Chrome" },
    "send": ["Cmd:down 5 Cmd:up", "currentKey:up"]
  },
  {
    "keys": ["F4"],
    "if": { "appName": "com.google.Chrome" },
    "send": ["Cmd:down 6 Cmd:up", "currentKey:up"]
  },
  {
    "keys": ["F5"],
    "if": { "appName": "com.google.Chrome" },
    "send": ["Alt:down S Alt:up", "currentKey:up"]
  },
  {
    "keys": ["F6"],
    "if": { "appName": "com.google.Chrome" },
    "send": ["Alt:down T Alt:up", "currentKey:up"]
  },
  {
    "keys": ["H"],
    "if": { "appName": "com.google.Chrome", "Cmd": true, "Alt": false },
    "send": ["Cmd:down 5 Cmd:up Cmd:down", "currentKey:up"]
  },
  {
    "keys": ["L"],
    "if": { "appName": "com.google.Chrome", "Cmd": true, "Alt": false },
    "send": ["Cmd:down 6 Cmd:up Cmd:down", "currentKey:up"]
  },
  {
    "keys": ["Semicolon"],
    "if": { "appName": "com.google.Chrome", "Cmd": true, "Alt": false },
    "send": ["Cmd:down L Cmd:up Cmd:down", "currentKey:up"]
  },
  {
    // full screen
    "keys": ["F"],
    "if": { "appName": "com.google.Chrome", "Cmd": true, "Alt": true },
    "send": ["Alt:up Ctrl:down currentKey Ctrl:up Alt:up", "currentKey:up"]
  },
  {
    // give focus back to page
    "keys": ["E"],
    "if": { "appName": "com.google.Chrome", "Cmd": true },
    "send": ["L Cmd:up SK:Delay:10 U Enter Cmd:down", "currentKey:up"]
  },
  {
    // cmd+shift+i for toggling dev tools
    "keys": ["I"],
    "if": { "appName": "com.google.Chrome", "Cmd": true, "Shift": true },
    "send": ["Shift:up Alt:down I Alt:up Shift:down", "currentKey:up"]
  },
  {
    // cmd+p show downloads tab
    "keys": ["ForwardSlash"],
    "if": {
      "appName": "com.google.Chrome",
      "Cmd": true,
      "Shift": false,
      "Alt": false
    },
    "send": ["Shift:down J Shift:up", "currentKey:up"]
  },

  // Terminal

  {
    "keys": ["K"],
    "if": { "appName": "com.googlecode.iterm2", "Alt": true, "Cmd": false },
    "send": ["Alt:up Cmd:down K:down Cmd:up Alt:down", "currentKey:up"]
  },

  // Slack

  {
    "keys": ["P"],
    "if": { "appName": "com.tinyspeck.slackmacgap", "Cmd": true, "Alt": false },
    "send": ["K", "currentKey:up"]
  },

  // iTerm

  {
    "keys": ["O"],
    "if": { "appName": "com.googlecode.iterm2", "Cmd": true, "Alt": false },
    "send": ["K", "currentKey:up"]
  }
]
