[
  // Google Chrome
  {
    "keys": ["F3"],
    "if": { "appName": "com.google.Chrome" },
    "send": ["CmdL:down 5 CmdL:up", "currentKey:up"]
  },
  {
    "keys": ["F4"],
    "if": { "appName": "com.google.Chrome" },
    "send": ["CmdL:down 6 CmdL:up", "currentKey:up"]
  },
  {
    "keys": ["F5"],
    "if": { "appName": "com.google.Chrome" },
    "send": ["AltL:down S AltL:up", "currentKey:up"]
  },
  {
    "keys": ["F6"],
    "if": { "appName": "com.google.Chrome" },
    "send": ["AltL:down T AltL:up", "currentKey:up"]
  },
  {
    "keys": ["H"],
    "if": { "appName": "com.google.Chrome", "CmdL": true, "AltL": false },
    "send": ["CmdL:down 5 CmdL:up CmdL:down", "currentKey:up"]
  },
  {
    "keys": ["L"],
    "if": { "appName": "com.google.Chrome", "CmdL": true, "AltL": false },
    "send": ["CmdL:down 6 CmdL:up CmdL:down", "currentKey:up"]
  },
  {
    "keys": ["Semicolon"],
    "if": { "appName": "com.google.Chrome", "CmdL": true, "AltL": false },
    "send": ["CmdL:down L CmdL:up CmdL:down", "currentKey:up"]
  },
  {
    // full screen
    "keys": ["F"],
    "if": { "appName": "com.google.Chrome", "CmdL": true, "AltL": true },
    "send": ["AltL:up CtrlL:down currentKey CtrlL:up AltL:up", "currentKey:up"]
  },
  {
    // give focus back to page
    "keys": ["E"],
    "if": { "appName": "com.google.Chrome", "CmdL": true },
    "send": ["L CmdL:up SK:Delay:10 ShiftL:down 2 ShiftL:up U Space U Enter CmdL:down", "currentKey:up"]
  },
  {
    // cmd+shift+i for toggling dev tools
    "keys": ["I"],
    "if": { "appName": "com.google.Chrome", "CmdL": true, "ShiftL": true },
    "send": ["ShiftL:up AltL:down I AltL:up ShiftL:down", "currentKey:up"]
  },
  {
    // faster bookmark bar tooggle
    "keys": ["B"],
    "if": { "appName": "com.google.Chrome", "CmdL": true },
    "send": [
      "CmdL:up CmdL:down ShiftL:down currentKey ShiftL:up",
      "currentKey:up"
    ]
  },

  // Starcraft II

  {
    "keys": ["F1", "F2", "F3", "F4", "F10", "F11", "F12"],
    "if": { "appName": "com.blizzard.starcraft2" },
    "send": ["currentKey:down", "currentKey:up"]
  },
  {
    // this is for autorepair (c is the hotkey for repair, so cmd + d is for autorepair)
    "keys": ["D"],
    "if": { "appName": "com.blizzard.starcraft2", "CmdL": true },
    "send": ["D:up AltL:down C AltL:up", null]
  },

  // Slack

  {
    "keys": ["P"],
    "if": {
      "appName": "com.tinyspeck.slackmacgap",
      "CmdL": true,
      "AltL": false
    },
    "send": ["K", "currentKey:up"]
  },

  // Warp

  {
    "keys": ["H"],
    "if": { "appName": "dev.warp.Warp-Stable", "CmdL": true, "AltL": false },
    "send": [
      "CmdL:up CtrlL:down ShiftL:down Tab ShiftL:up CtrlL:up CmdL:down",
      "currentKey:up"
    ]
  },
  {
    "keys": ["L"],
    "if": { "appName": "dev.warp.Warp-Stable", "CmdL": true, "AltL": false },
    "send": ["CmdL:up CtrlL:down Tab CtrlL:up CmdL:down", "currentKey:up"]
  }
]
