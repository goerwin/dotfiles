[
  // Use cmd+j/k for pageDown/pageUp
  // This is just for ergonomics
  {
    "keys": ["J"],
    "if": { "Cmd": true, "Alt": false },
    "send": ["Cmd:up PageDown:down", "PageDown:up currentKey:up"],
    "afterKeyUp": "Cmd:down"
  },
  {
    "keys": ["K"],
    "if": { "Cmd": true, "Alt": false },
    "send": ["Cmd:up PageUp:down", "PageUp:up currentKey:up"],
    "afterKeyUp": "Cmd:down"
  },
  {
    // fallback for when you need cmd+j/k you can use fn+j/k
    "keys": ["J", "K"],
    "if": { "Fn": true },
    "send": ["Fn:up Cmd:down currentKey:down Cmd:up Fn:down", "currentKey:up"]
  },

  // F18/Caps as control for some keys
  {
    "keys": ["C", "Space", "V", "Tab", "W", "E", "R", "D", "U", "I", "O", "P"],
    "if": { "F18": true },
    "send": ["Ctrl:down currentKey Ctrl:up", "currentKey:up"]
  },

  // Mute mic
  {
    "keys": ["M"],
    "if": { "Alt": true },
    "send": ["Cmd:down M Cmd:up", "currentKey:up"]
  },

  // App expos√©
  {
    "keys": ["J"],
    "if": { "Cmd": true, "Alt": true, "Shift": false },
    "send": [
      "Cmd:up Alt:up Ctrl:down DownArrow Ctrl:up Cmd:down Alt:down",
      "currentKey:up"
    ]
  },

  // Go to back/forward page in browser/finder navigation
  {
    "keys": ["H"],
    "if": { "Alt": true, "Cmd": false, "Shift": false },
    "send": ["Alt:up Cmd:down BracketL Cmd:up Alt:down", "currentKey:up"]
  },
  {
    "keys": ["L"],
    "if": { "Alt": true, "Cmd": false, "Shift": false },
    "send": ["Alt:up Cmd:down BracketR Cmd:up Alt:down", "currentKey:up"]
  },
  {
    // fallback for when you need alt+h/l you can use fn+h/l
    "keys": ["H", "L"],
    "if": { "Fn": true },
    "send": ["Fn:up Alt:down currentKey:down Alt:up Fn:down", "currentKey:up"]
  },

  // Alfred stop active workflows
  {
    "keys": ["S"],
    "if": { "F18": true },
    "send": ["Cmd:down Alt:down S Alt:up Cmd:up", "currentKey:up"]
  },

  // Media Keys

  {
    "keys": ["F1", "F2", "F7", "F8", "F9", "F10", "F11", "F12"],
    "if": { "Cmd": true },
    "send": ["Cmd:up currentKey Cmd:down", "currentKey:up"]
  },
  { "keys": ["F1"], "send": ["BrightnessDown:down", "BrightnessDown:up"] },
  { "keys": ["F2"], "send": ["BrightnessUp:down", "BrightnessUp:up"] },
  { "keys": ["F7"], "send": ["Rewind"] },
  { "keys": ["F8"], "send": ["PlayPause"] },
  { "keys": ["F9"], "send": ["FastForward"] },
  { "keys": ["F10"], "send": ["Mute"] },
  { "keys": ["F11"], "send": ["VolumeDown:down", "VolumeDown:up"] },
  { "keys": ["F12"], "send": ["VolumeUp:down", "VolumeUp:up"] },

  // NOTE: at the very end, release all possible keys
  // that can still be on down on other shortcuts

  {
    "keys": ["Backspace"],
    "if": { "Fn": true },
    "send": ["ForwardDelete:down", "ForwardDelete:up currentKey:up"]
  },

  {
    "keys": ["J"],
    "send": ["currentKey:down", "PageDown:up DownArrow:up currentKey:up"]
  },
  {
    "keys": ["K"],
    "send": ["currentKey:down", "PageUp:up UpArrow:up currentKey:up"]
  },
  {
    "keys": ["H"],
    "send": ["currentKey:down", "LeftArrow:up currentKey:up"]
  },
  {
    "keys": ["L"],
    "send": ["currentKey:down", "RightArrow:up currentKey:up"]
  },
  {
    "keys": ["Backspace"],
    "send": ["currentKey:down", "ForwardDelete:up currentKey:up"]
  }
]
